<h1> <%= @chef.name %> </h1>

<h2>
  <%= link_to "Ingredients used by #{@chef.name}", "/chefs/#{@chef.id}/ingredients" %>
</h2>


<section class="most-popular-ingredients">
  <h3>Most Popular Ingredients:</h3>
  <% @chef.most_popluar_ingredients.each do |ingredient| %>
